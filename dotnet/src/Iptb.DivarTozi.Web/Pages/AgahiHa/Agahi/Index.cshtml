@page
@using Iptb.DivarTozi.Permissions
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Iptb.DivarTozi.Web.Pages.AgahiHa.Agahi
@using Iptb.DivarTozi.Localization
@using Iptb.DivarTozi.Web.Menus
@model IndexModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<DivarToziResource> L
@inject IAuthorizationService Authorization
@{
    PageLayout.Content.Title = L["Agahi"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:Agahi"].Value);
    PageLayout.Content.MenuItemName = DivarToziMenus.Agahi;
}

@section scripts
{
    <abp-script src="/Pages/AgahiHa/Agahi/index.js" />
}
@section styles
{
    <abp-style src="/Pages/AgahiHa/Agahi/index.css"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Agahi"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
			    @if (await Authorization.IsGrantedAsync(DivarToziPermissions.Agahi.Create))
                {
                <abp-button id="NewAgahiButton"
                            text="@L["CreateAgahi"].Value"
                            icon="plus"
                            button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="AgahiTable" class="nowrap"/>
    </abp-card-body>
</abp-card>
